            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
        </ComboBox>

        <Label x:Name="lbl_Round1" Content="Runde 1:" Margin="0,48,188.4,0" HorizontalAlignment="Right" Width="54" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Round1Name" Margin="0,51,16.4,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Round2" Content="Runde 2:" Margin="0,76,188.4,0" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Width="54"/>

        <TextBox x:Name="txt_Round5" Margin="0,163,16.4,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Round6" Content="Runde 6:" HorizontalAlignment="Right" Margin="0,188,188.4,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Round6" Margin="0,191,16.4,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Top"/>

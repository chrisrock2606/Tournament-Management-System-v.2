        <TextBox x:Name="txt_LeagueName" HorizontalAlignment="Left" Margin="105,51,0,0" TextWrapping="Wrap" Text="" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Reward" Content="Præmie:" HorizontalAlignment="Left" Margin="8,79,0,0" Width="69" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Reward" HorizontalAlignment="Left" Margin="105,82,0,0" TextWrapping="Wrap" Text="" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_TeamType" Content="Hold Type:" HorizontalAlignment="Left" Margin="8,110,0,0" Width="82" Height="26" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_OneTeamMember" Content="1 Person" HorizontalAlignment="Left" Margin="105,116,0,0" Height="15" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_TwoTeamMembers" Content="2 Person" HorizontalAlignment="Left" Margin="186,116,0,0" Height="15" VerticalAlignment="Top"/>

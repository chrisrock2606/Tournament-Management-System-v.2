        <TextBox x:Name="txt_Round3Name" Margin="0,107,16.4,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Round4" Content="Runde 4:" Margin="0,132,188.4,0" HorizontalAlignment="Right" Width="54" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Round4Name" Margin="0,135,16.4,0" TextWrapping="Wrap" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_GameType" Content="Spil Titel:" HorizontalAlignment="Left" Margin="8,172,0,0" Width="74" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_GameName" HorizontalAlignment="Left" Margin="105,172,0,0" TextWrapping="Wrap" Text="" Width="145" Height="23" VerticalAlignment="Top"/>
        <Label x:Name="lbl_LeagueStatus" Content="Status:" HorizontalAlignment="Left" Margin="8,141,0,0" Width="61" Height="26" VerticalAlignment="Top"/>
        <Button x:Name="btn_Clear" Content="Ryd" HorizontalAlignment="Left" Margin="10,0,0,6" Width="85" Click="btn_Clear_Click" Height="19" VerticalAlignment="Bottom"/>
        <Button x:Name="btn_SaveLeague" Content="Gem" Margin="0,0,16.4,6" Click="btn_SaveLeague_Click" Height="19" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="85"/>

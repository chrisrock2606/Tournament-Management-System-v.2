        <Label x:Name="lbl_PhoneNr" Content="Tlf Nr.:" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Close" Content="Annuller" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="60" Click="btn_Close_Click"/>
